<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context="com.example.a300272555.movieticketapp.Ticket">


        <TextView
            android:id="@+id/ticketTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif"
            android:gravity="bottom"
            android:paddingBottom="40dp"
            android:text="@string/ticketTitle"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            android:textStyle="bold" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="0.28"
        android:background="?attr/actionModeSplitBackground"/>


    <TextView
        android:id="@+id/ticketContent"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.88"
        android:background="?attr/actionModeSplitBackground"
        android:fontFamily="sans-serif"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <Button
        android:id="@+id/btnbookAnother"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:text="@string/btnbookAnother"
        android:layout_weight="0.69" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:text="SignOut" />

</LinearLayout>
</LinearLayout>
